require('dotenv').config();
const axios = require('axios');

const shellyIP = process.env.SHELLY_IP;
const url = `http://${shellyIP}/rpc/Switch.Set`;

const triggerRelay = async () => {
  const time = new Date().toISOString();
  try {
    console.log(`ğŸ“¡ [${time}] Sending ON request to Shelly @ ${url}`);
    const onRes = await axios.post(url, { id: 0, on: true });

    console.log(`ğŸŸ¢ [${time}] Shelly ON response:`, onRes.data);

    setTimeout(async () => {
      console.log(`ğŸ”´ [${time}] Sending OFF request...`);
      const offRes = await axios.post(url, { id: 0, on: false });
      console.log(`ğŸŸ¢ [${time}] Shelly OFF response:`, offRes.data);
    }, 1000);
  } catch (err) {
    console.error(`âŒ [${time}] Error contacting Shelly at ${url}`);
    console.error(`âŒ Stack:`, err.stack || err.message);
  }
};

module.exports = triggerRelay;
