require('dotenv').config();
const axios = require('axios');

const shellyIP = process.env.SHELLY_IP;

const triggerRelay = async () => {
  try {
    const url = `http://${shellyIP}/rpc/Switch.Set`;

    console.log('ğŸŸ¡ Sending ON request to Shelly...');
    const onRes = await axios.post(url, { id: 0, on: true });
    console.log('ğŸŸ¢ ON response:', onRes.data);

    setTimeout(async () => {
      console.log('ğŸ”´ Sending OFF request...');
      const offRes = await axios.post(url, { id: 0, on: false });
      console.log('ğŸŸ¢ OFF response:', offRes.data);
    }, 1000);
  } catch (err) {
    console.error('âŒ Error triggering relay:', err.message);
  }
};

module.exports = triggerRelay;
